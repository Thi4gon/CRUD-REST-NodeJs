<h3>{{viewTitle}}</h3>


<form action="/albums" method=POST>

<input type="hidden" name="_id" value= "{{albums._id}}">

    <div class="form-group">
        <label >Titulo Album</label>
        <input type="text" class="form-control" name="title" placeholder="Titulo do Album" value="{{albums.title}}" required>
      <div class="text-danger">
                    {{albums.titleError}}
            </div>
    </div>
    <div class="form-group">
       <label >Id Usuario</label>
        <input type="number" min="0" class="form-control" name="idusuario" placeholder="Id Usuario" value="{{albums.idusuario}}">
    </div>

  

    

<div class="form-group">
    <button type="submit"class="btn btn-secondary"><i class="fa fa-save"></i> Enviar! </button>
    <a class="btn btn-secondary" href="/albums/list"><i class="fas fa-book-open"></i> Ver lista de albums! </a>
    </div>

</form>   